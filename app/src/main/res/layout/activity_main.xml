<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.Users.Home.HomeActivity$MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/app_logo_png"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_shop"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/exo_2_bold"
        android:shadowColor="@color/black37"
        android:shadowDy="5"
        android:shadowRadius="3"
        android:singleLine="true"
        android:text="Магазин"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/txt_pc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_shop"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/exo_2_bold"
        android:shadowColor="@color/black37"
        android:shadowDy="5"
        android:shadowRadius="3"
        android:text="компьютеров"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="21sp" />

    <Button
        android:id="@+id/main_button_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/button_login"
        android:backgroundTintMode="src_in"
        android:shadowColor="@color/black37"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Войти"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/main_txt_sign_up1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:shadowColor="@color/black37"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Ещё нет аккаунта?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/main_txt_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="70dp"
        android:shadowColor="@color/black37"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="Регистрация"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold" />


</RelativeLayout>